{% extends 'layout.twig' %}

{% block js %}
    {{ parent() }}
    <script src="/javascripts/add.js"></script>
{% endblock %}

{% block body %}
    <a href="/products/list">Accéder à la liste</a>

    {% if success %}
        Le produit a été enregistré avec succès
    {% endif %}

    <form name="addProduct" method="post">
        <div class="form-group">
            <label for="Name">Nom</label>
            <input type="text" required="required" class="form-control" name="Name" id="Name" aria-describedby="saisir le nom du produit" placeholder="Nom produit">
        </div>
        <div class="form-group">
            <label for="Price">Prix</label>
            <input type="number" step="0.01" required="required" class="form-control" name="Price" id="Price" aria-describedby="saisir le prix du produit" placeholder="Prix produit">
           {# <small id="emailHelp" class="form-text text-muted">Le prix ne doit pas ⁼.</small>#}
        </div>
        <button type="submit" id="submitBtn" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}